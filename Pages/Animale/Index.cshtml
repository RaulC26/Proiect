@page
@model Proiect.Pages.Animale.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Animal[0].Nume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Animal[0].Specie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Animal[0].Rasa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Animal[0].Varsta)
            </th>
            @Html.DisplayNameFor(model => model.Animal[0].Proprietar.Nume)
            <th>
                Proprietar
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Animal)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nume)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Specie)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rasa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Varsta)
                </td>
                <!-- Aici afișăm numele proprietarului -->
                <td>
                    @Html.DisplayFor(modelItem => item.Proprietar.Nume)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

